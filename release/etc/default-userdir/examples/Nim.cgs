class Nim extends Game

    var n;
    
    method Nim(Integer n)
    
        this.n := n;
    
    end

    method Options(Player player)
    
        options := {};
        
        for k from 0 to this.n-1 do
            options.Add(Nim(k));
        end;
        
        return options;
    
    end
    
    override property ToString.get
    
        return "Nim(" + this.n.ToString + ")";
    
    end

end