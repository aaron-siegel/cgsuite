class GridGame extends Game : java "org.cgsuite.lang.game.GridGame"

    var grid;

    method GridGame(grid)
        if grid.Class == Grid then
            this.grid := grid;
        elseif grid.Class == String then
            this.grid := Grid.ParseGrid(grid, this.CharMap);
        else
            error("GridGame must be initialized with a String or a Grid object.");
        end
    end

    property Grid.get
        return this.grid;
    end

    override property ToString.get
        return this.Class.Name + "(" + this.grid.MapString(this.CharMap) + ")";
    end
    
end