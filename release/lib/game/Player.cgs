enum Player

    Left    (true),
    Right   (false);

    var isLeft;

    method Player(isLeft)
        this.isLeft := isLeft;
    end

    property Opponent.get
        if this.isLeft then return Player.Right; else return Player.Left; end
    end

    property Sign.get
        if this.isLeft then return 1; else return -1; end
    end

end