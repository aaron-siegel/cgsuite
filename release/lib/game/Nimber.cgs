class Nimber extends CanonicalShortGame, ImpartialGame

    override property CanonicalForm.get
        return this;
    end
    override property NimValue.get : java "getNimberPart";
    override property MisereNimValue.get
        n := NimValue;
        return
            if n == 0 then 1
            elseif n == 1 then 0
            else n
            end;
    end

end