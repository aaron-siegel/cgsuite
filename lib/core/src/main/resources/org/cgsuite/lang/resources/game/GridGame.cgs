class GridGame(grid) extends Game

  if grid is Grid then
  elseif grid is String then
    grid := Grid.Parse(grid, CharMap)
  end

  def CharMap := error("Subclasses of GridGame must override CharMap.");

  def Icons := error("Subclasses of GridGame must override Icons.");

  override def ToOutput :=
    cgsuite.util.output.GridOutput(grid, Icons, this.Class.Name + "(\"" + grid.ToString(CharMap) + "\")");

end
