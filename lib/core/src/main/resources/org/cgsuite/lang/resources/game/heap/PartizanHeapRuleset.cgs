/*${cgsuite.banner}*/

class PartizanHeapRuleset(leftRuleset as HeapRuleset, rightRuleset as HeapRuleset) extends Ruleset of Integer

  def GameValueSequence(toHeapSize as Integer) := listof(Eval(n).GameValue for n from 1 to toHeapSize);

  override def ComponentwiseOptions(heapSize as Integer, player as Player) begin

    if player == Left then
      leftRuleset HeapOptions heapSize
    else
      rightRuleset HeapOptions heapSize
    end

  end

end
