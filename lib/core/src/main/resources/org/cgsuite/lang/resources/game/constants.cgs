singleton class constants

  var Left := Player.Left;
  var Right := Player.Right;

  var Onside := Side.Onside;
  var Offside := Side.Offside;

  var inf := 1/0;

  def on := {pass|};
  def off := -on;
  def dud := on & off;
  def over := {0|pass};
  def under := -over;
  def upon := {pass|*};

  def Miny(g as CanonicalStopper) := {g|0||0};
  def Tiny(g as CanonicalStopper) := {0||0|-g};

end
