/*${cgsuite.banner}*/

class Clobber(grid) extends Game

  if grid is Grid then
  elseif grid is String then
    grid := Grid.Parse(grid, ".xo")
  end

  override def Options(Player player)

    var us := player.Ordinal;
    var them := player.Opponent.Ordinal;

    for c in grid.FindAll(us)
    for d in Coordinates.Orthogonal where grid[c+d] == them
    yield
      Clobber(grid.Updated({c => 0, c+d => us}))
    end

  end

end
